<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title><%= typeof title != 'undefined' ? title: 'FoodScript' %></title>
        <link rel="icon" href="/assets/favicon/favicon.jpg">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
        <link rel="stylesheet" href="/css/globals.css">
        <link rel="stylesheet" href="/css/utilities.css">
		<link rel="stylesheet" href="/css/index.css">
        <link rel="stylesheet" href="/css/mobile.css">
        <link rel="stylesheet" href="/css/tablet.css">
	</head>
	<body>

        <div class="main-wrapper flex-column g-3">

            <!-- Header Start -->
            <header class="w-100">
                <nav class="p-bottom-1 bb flex-align-center space-between">

                    <div class="navbar-left">
                        <a href="/" class="flex-align-center">
                            <img src="/assets/favicon/icon-nodejs.svg" alt="Logo NodeJS">
                            <div class="flex-column">
                                <h3 class="fs-3">FoodScript</h3>
                                <span class="fs-1">Made with NodeJS</span>
                            </div>
                        </a>
                    </div>

                    <div class="navbar-center">    
                        <ul class="flex-align-center g-3">
                            <li><a href="/">Home</a></li>
                            <li><a href="/about">About</a></li>
                            <li><a href="/submit-recipe">Recipe</a></li>
                            <li><a href="/contact">Contact</a></li>
                        </ul>
                    </div>

                    <div class="navbar-right flex-align-center g-3">
                        <% if (user) { %>
                            <button>
                                <a href="/profile" class="txt-white"><%= user.email %></a>
                            </button>
                        <% } else { %>
                            <button>
                                <a href="/login" class="txt-white">Log In</a>
                            </button>
                            <button>
                                <a href="/signup" class="txt-white">Sign Up</a>
                            </button>
                        <% } %>
                    </div>

                    <div class="menu-bar">
                        <button id="btnOpenMenubar"><i class="fa-solid fa-bars"></i></button>
                    </div>

                </nav>
            </header>
            <!-- Header End -->



            <!-- Menubar Start -->
            <div class="nav-mobile w-75 h-75 ts">
                <nav class="p-top-3 flex-column align-center g-3">
                    <ul class="m-bottom-1 w-100 flex-column align-center g-3">
                        <li class="p w-75 txt-align-center bb"><a href="/" class="fs-xl">Home</a></li>
                        <li class="p w-75 txt-align-center bb"><a href="/about" class="fs-xl">About</a></li>
                        <li class="p w-75 txt-align-center bb"><a href="/submit-recipe" class="fs-xl">Recipe</a></li>
                        <li class="p w-75 txt-align-center bb"><a href="/contact" class="fs-xl">Contact</a></li>
                    </ul>

                    <% if (user) { %>
                        <li class="p w-75 txt-align-center bb"><a href="/profile" class="fs-xl"><%= user.email %></a></li>
                    <% } else { %>
                        <button class="p w-50">
                            <a href="/login" class="txt-white">Log In</a>
                        </button>
                        <button class="p w-50">
                            <a href="/signup" class="txt-white">Sign Up</a>
                        </button>
                    <% } %>

                    <button class="p w-50" id="btnCloseMenubar">x Close</button>
                </nav>
            </div>
            <!-- Menubar End -->



            <!-- Main Start -->
		    <main><%- body -%></main>
            <!-- Main End -->
        


            <!-- Footer Start -->
            <footer class="w-100">

                <p>Build by Bobby</p>

            </footer>
            <!-- Footer End -->

        </div>

        <script src="/js/index.js"></script>
	</body>
</html>
