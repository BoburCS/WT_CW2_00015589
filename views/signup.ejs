<h1 class="fs-xxl txt-align-center m-bottom-3">Sign Up</h1>

<!-- Sign Up Form Start -->
<form action="/signup" method="POST" class="m-auto w-50">

    <% if (typeof errors !== 'undefined') { %>
        <% errors.forEach(function(error) { %>
            <p><%= error.msg %></p>
        <% }) %>
    <% } %>

    <div class="m-bottom-3 flex-column">
        <label for="signupEmail" class="m-bottom-1">Email:</label>    
        <input type="email" name="signupEmail" id="signupEmail" required>
    </div>
    
    <div class="m-bottom-3 flex-column">
        <label for="signupPassword" class="m-bottom-1">Password:</label>
        <input type="password" name="signupPassword" id="signupPassword" required>
    </div>

    <div>
        <button type="submit" class="w-100">Sign Up</button>
    </div>
    
</form>
<!-- Sign Up Form End -->