<h1 class="fs-xxl txt-align-center m-bottom-3">Log In</h1>

<!-- Log In Form Start -->
<form action="/login" method="POST" class="m-auto w-50">

    <% if (typeof errors !== 'undefined') { %>
        <% errors.forEach(function(error) { %>
            <p><%= error.msg %></p>
        <% }) %>
    <% } %>

    <div class="m-bottom-3 flex-column">
        <label for="loginEmail" class="m-bottom-1">Email:</label>    
        <input type="email" name="loginEmail" id="loginEmail" required>
    </div>
    
    <div class="m-bottom-3 flex-column">
        <label for="loginPassword" class="m-bottom-1">Password:</label>
        <input type="password" name="loginPassword" id="loginPassword" required>
    </div>

    <div>
        <button type="submit" class="w-100">Log In</button>
    </div>
    
</form>
<!-- Log In Form End -->